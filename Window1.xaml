<Window x:Class="YP5_PagePrimer_Cherednichenko.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YP5_PagePrimer_Cherednichenko"
        mc:Ignorable="d"
        Title="Задание 1" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="383*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="3" Background="Aquamarine">
            <Label Content="Menu:" Height="30"/>
            <MenuItem Header="Load Case/"/>
            <MenuItem Header="Save/"/>
            <MenuItem Header="New Case"/>
        </Menu>
        <Canvas Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="3" Background="Azure"/>

        <Frame Source="Page4.xaml" Grid.Column="0" Grid.Row="1" Margin="20" Background="Aquamarine"/>
        <Frame Source="Page5.xaml" Grid.Column="1" Grid.Row="1" Margin="20" Background="Aquamarine"/>
    </Grid>
</Window>
